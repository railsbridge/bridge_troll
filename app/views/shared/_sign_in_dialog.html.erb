<div id="sign_in_dialog" class="modal <% unless Rails.env.test? %>fade<% end %>" tabindex="-1" role="dialog" aria-labelledby="sign_in_dialogLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h1>Sign in</h1>
      </div>
      <div class="modal-body">
        <%= render "shared/sign_in", resource: User.new %>
        <%= devise_links(:forgot_password, :confirmation_instructions) %>
      </div>
      <div class="modal-footer"></div>
    </div>
  </div>
</div>