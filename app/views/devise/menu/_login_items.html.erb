<% if user_signed_in? %>
  <li>
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn' %>
  </li>
  <li>
    <%= link_to 'Account',edit_user_registration_path, class: 'btn' %>
  </li>
  <li>
    <%= link_to 'Profile', user_profile_path(current_user.id), class: 'btn' %>
  </li>
<% else %>
  <li id="sign_in">
    <a href="#sign_in_dialog" role="button" class="btn" data-toggle="modal">Sign In</a>
  </li>
  <li>
    <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary' %>
  </li>
<% end %>
