    <%= f.label :teaching %>
  </div>
  <div>
    <%= f.check_box :taing %>
    <%= f.label 'ta-ing' %>
  </div>
  <div>
    <%= f.check_box :coordinating %>
    <%= f.label :coordinating %>    
  </div>
  <div>
    <%= f.check_box :childcaring %>
    <%= f.label :childcaring %>
  </div>
  <div>
