        <%= f.label :hacking %>
  </div>
  <div>
    <%= f.check_box :designing %>
        <%= f.label :designing %>
  </div>
  <div>
    <%= f.check_box :evangelizing %>
        <%= f.label :evangelizing %>
  </div>
  <div>
    <%= f.check_box :mentoring %>
        <%= f.label :mentoring %>
  </div>
    <div>
    <%= f.check_box :macosx %>
        <%= f.label :macosx %>
  </div>
  <div>
    <%= f.check_box :windows %>
        <%= f.label :windows %>
  </div>
  <div>
    <%= f.check_box :mentoring %>
        <%= f.label :mentoring %>
  </div>
  <div>
