<div class="level_buttons">
  <% levels.each do |level| %>
    <div class="class_level_line">
      <label class='class_level' >
        <% if defined?(f) %>
          <%= f.radio_button :class_level, level.num %>
        <% end %>
        <span class="<%= "label btn-#{level.color}" %>"><%= level.color.capitalize %></span>
        <%= level.title %>
        <ul>
          <% level.description.each do |info| %>
            <li><%= info.html_safe %></li>
          <% end %>
        </ul>
      </label>
    </div>
  <% end %>
  <% if show_no_preference %>
    <div class="class_level_line">
      <label>
        <% if defined?(f) %>
          <%= f.radio_button :class_level, 0 %>
        <% end %>
        <span class="label btn-gray">Any</span>
        No preference
      </label>
    </div>
  <% end %>
</div>
