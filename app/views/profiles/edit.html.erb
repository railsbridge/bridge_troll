<h3>Profile edit <%= @user.full_name %></h3>
<%= render 'shared/profile_gravatars'%>
<%= form_for([@user, @profile], :url => {:action => "update"}, :html => {:class => "form-horizontal"}) do |f| %>
  <h3>Skills</h3>

  <% skills.each do |skill| %>
    <%= f.label skill_symbol(skill) do %>
      <%= f.check_box skill_symbol(skill) %> <%= "#{skill_title(skill)}" %>
    <% end %>
  <% end %>

  <div>
    <%= f.label :other, "Other Skills" %>
    <%= f.text_area :other, :rows => 3 %>
  </div>

  <div>
    <%= f.label :bio %>
    <%= f.text_area :bio, :rows => 3 %>
  </div>

  <div><%= f.submit "Update", class: 'btn' %></div>
<% end %>

<%= render 'shared/actions', links: [
  ["Back", :back]
] %>
