<div class="row">
  <div class="col-md-6">
    <%= simple_form_for(@region) do |f| %>
      <%= render 'shared/model_error_messages', model: @region %>

      <%= f.input :name %>

      <div class="actions">
        <%= f.submit class: 'btn btn-submit', data: {disable_with: 'Please wait...'} %>
      </div>
    <% end %>
  </div>
</div>
