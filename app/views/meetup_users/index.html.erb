<h1>Meetup users</h1>

<table class="datatable table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Meetup Profile</th>
      <th># Attended as Student</th>
      <th># Attended as Volunteer</th>
      <th># Organized</th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.full_name, meetup_user_path(user) %></td>
      <td><%= link_to user.meetup_id, "http://www.sfruby.info/members/#{user.meetup_id}/" %></td>
      <% if @attendances.present? %>
        <td><%= @attendances[user.id][Role::STUDENT.id] %></td>
        <td><%= @attendances[user.id][Role::VOLUNTEER.id] %></td>
        <td><%= @attendances[user.id][Role::ORGANIZER.id] %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
