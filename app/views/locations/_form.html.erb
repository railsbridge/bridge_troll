<div class="row">
  <div class="col-md-6">
    <%= simple_form_for(@location) do |f| %>
      <%= render 'shared/model_error_messages', model: @location %>

      <div class="form-group">
        <%= f.label :chapter_id %>
        <%= f.collection_select(:chapter_id, Chapter.all, :id, :name, {:prompt => true}, {class: 'form-control'}) %>
        <p>
          <em>If your chapter isn't in this list, head over to the <%= link_to 'chapters page', chapters_path %> and add it before you continue.</em>
        </p>
      </div>

      <%= f.input :name %>

      <%= f.input :address_1 %>

      <%= f.input :address_2 %>

      <%= f.input :city %>

      <%= f.input :state %>

      <%= f.input :zip %>

      <% if @location.additional_details_editable_by?(current_user) %>
        <%= f.input :contact_info %>
        <%= f.input :notes %>
      <% end %>

      <div class="actions">
        <%= f.submit class: 'btn btn-submit' %>
      </div>
    <% end %>
  </div>
</div>
