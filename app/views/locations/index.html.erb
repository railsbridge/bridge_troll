<h1>Listing locations</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <% if user_signed_in? %>
      <th></th>
      <th></th>
    <% end %>
  </tr>

  <% @locations.each do |location| %>
    <tr>
      <td><%= link_to location.name, location %></td>
      <td><%= location.address_1 %><% if location.address_2.present? %> <%= location.address_2 %><% end %></td>
      <td><%= location.city %></td>
      <td><%= location.state %></td>
      <td><%= location.zip %></td>
      <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, confirm: 'Are you sure?', method: :delete %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<ul class='actions'>
  <% if user_signed_in? %>
    <li class='btn'><%= link_to 'New Location', new_location_path %></li>
  <% end %>
  <li class='btn'><%= link_to 'Events', events_path %></li>
</ul>