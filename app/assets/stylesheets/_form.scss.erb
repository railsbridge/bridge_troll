@import "bootstrap/variables";
@import "mixins";
@import "font_mixins";

form {
  .question {
    @include font-amble-regular;
    font-size: 16px;
    margin-top: 10px;
  }
}

.cross-browser-select {
  background-image: url(<%= asset_data_uri 'dropdown_arrows.svg' %>);
  padding-right: 25px;
  background-repeat: no-repeat;
  background-position: right center;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
}

@media (max-width: $screen-xs-max) {
  select.form-control {
    font-size: 16px;
  }
}

.rsvp-form {
  h2 {
    margin-top: 20px;
  }

  .details {
    font-style: italic;
  }
}

.field {
  $input-height: 34px;
  .select2-container {
    .select2-selection {
      height: $input-height;
      &.select2-container--default {
        border: 1px solid #ccc;
      }
      .select2-selection__rendered {
        line-height: $input-height;
      }
      .select2-selection__arrow {
        height: $input-height;
      }
    }
  }
}

.survey-form {
  textarea {
    width: 100%;
    height: 150px;
  }

  label {
    @include font-amble-regular;
    font-size: 16px;
    margin-top: 10px;

    span {
      @include font-amble-light;
      font-size: 14px;
    }
  }

  input[type="submit"] {
    display: block;
    margin-top: 20px;
  }
}

.has-error .select2-selection {
  border-color: $state-danger-text;
}

.actions {
  .btn-warning {
    background-color: #f0ad4e;
    border-color: #eea236;
  }
}

@media (min-width: $screen-sm-min) {
  .checkbox-columns {
    width: 600px;
    &.checkbox-columns-small {
      width: 300px;
    }

    @include column-count(2);
  }
}
